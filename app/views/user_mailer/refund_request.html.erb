<h3>The following user has requested a refund</h3>
<p><b>Name:&nbsp</b><%= @user.name %></p>
<p><b>Email:&nbsp</b><%= @user.email %></p>
<p><b>Reason for Return:&nbsp</b><%= get_reason(@reason) %></p>
<% @products.each_with_index do |product, index| %>
    <h4>Product <%= index + 1 %></h4>
    <p>&nbsp&nbsp&nbsp&nbsp<b>Size:&nbsp</b><%= product[0] %>"</p>
    <p>&nbsp&nbsp&nbsp&nbsp<b>Quality:&nbsp</b><%= product[1] %></p>
    <p>&nbsp&nbsp&nbsp&nbsp<b>Quantity:&nbsp</b><%= product[2] %></p>
<% end %>
<p><b>Order Number:</b> <%= @order_number %></p>
<p><b>Payment Intent ID:</b> <%= @payment_intent_id %></p>