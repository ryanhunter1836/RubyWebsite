<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-12">
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true, class: 'form-inline mt-4') do |f| %>
      <b><%= f.label :email %></b>
      <%= f.email_field :email, class: 'form-control mx-2 w-50' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
