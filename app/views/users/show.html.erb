<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <a class="btn btn-primary" href="<%=new_vehicle_path%>" role="button">Add a new vehicle</a>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="text-center">
      <h3>Current Subscriptions</h3>
      <% if @user.order_options.any? %>
        <%= render partial: "order_option", collection: (@order_options) %>
      <% end %>
    </div>
  </div>
</div>