<div class="card mb-2">
    <div class="card-header">
        <h5>Subscription #<%= (order_option_counter + 1) %></h5>
    </div>
    <div class="card-body">
        <div class="row mb-2">
            <h5 class="col-12">Vehicles</h5>
            <div class="col-12"><%= get_vehicle_name(order_option.vehicle_id) %></div>
        </div>
        <div class="row mb-2">
            <h5 class="col-12">Quality</h5>
            <div class="col-12"><%= get_quality_string(order_option.quality) %></div>
        </div>
        <div class="row mb-2">
            <h5 class="col-12">Frequency</h5>
            <div class="col-12"><%= get_frequency_string(order_option.frequency) %></div>        
        </div>
        <div class="row mb-2">
            <h5 class="col-12">Shipping Address</h5>
            <div class="col-12">
                <%= @shipping_address.address1 %>
                <%= @shipping_address.address2 %>
                <br />
                <%= @shipping_address.city %>,
                <%= @shipping_address.state %>
                <%= @shipping_address.postal %>
            </div>
        </div>
        <div class="row mb-3">
            <h5 class="col-12">Next Shipment</h5>
            <div class="col-12"><%= Time.at(order_option.period_end).strftime("%m/%d/%Y") %></div>
        </div>
        <%= link_to "Edit Subscription", edit_vehicle_path(:id => order_option.id), class: 'btn btn-success mb-2 mb-md-0 variable-width' %>
        <%= link_to "Cancel Subscription", vehicle_path(order_option.id), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger variable-width' %>
    </div>
</div>

